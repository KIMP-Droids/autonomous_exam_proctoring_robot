    <!-- left wheel -->
    <link name="${prefix}left_wheel_link">
      <inertial>
        <origin xyz="8.211E-08 -0.017522 -4.1793E-07" rpy="0 0 0" />
        <mass value="0.583" />
        <inertia ixx="0.00092026" ixy="2.1255E-10" ixz="8.2654E-07" iyy="0.0017198" iyz="-1.099E-09" izz="0.00091447" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/left_wheel_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.7 0.1 0.8 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0" />
        <geometry>
          <cylinder radius="0.1" length="0.05" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}left_wheel_joint" type="continuous">
      <origin xyz="0 0.29485 -0.025" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}left_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>

    <!-- right wheel -->
    <link name="${prefix}right_wheel_link">
      <inertial>
        <origin xyz="3.8174E-07 0.017522 1.8833E-07" rpy="0 0 0" />
        <mass value="0.583" />
        <inertia ixx="0.00091579" ixy="-1.3235E-09" ixz="-2.5693E-06" iyy="0.0017198" iyz="-7.3676E-10" izz="0.00091893" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/right_wheel_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.7 0.1 0.8 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0" />
        <geometry>
          <cylinder radius="0.1" length="0.05" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}right_wheel_joint" type="continuous">
      <origin xyz="0 -0.29485 -0.025" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}right_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>

    <!-- front caster -->
    <link name="${prefix}front_castor_body_link">
      <inertial>
        <origin xyz="0.0055133 0.00033058 -0.0066169" rpy="0 0 0" />
        <mass value="0.011291" />
        <inertia ixx="4.0603E-06" ixy="1.367E-08" ixz="8.6782E-07" iyy="3.8335E-06" iyz="5.2075E-08" izz="4.4634E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/front_castor_body_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.4 0.4 0.4 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/front_castor_body_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}front_castor_body_joint" type="continuous">
      <origin xyz="0.105 0 -0.0415" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}front_castor_body_link" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}front_castor_wheel_link">
      <inertial>
        <origin xyz="0.001327 -0.02196 3.518E-06" rpy="0 0 0" />
        <mass value="0.047259" />
        <inertia ixx="9.5221E-06" ixy="-2.7895E-07" ixz="2.5434E-09" iyy="1.4162E-05" iyz="1.5234E-10" izz="9.4977E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/front_castor_wheel_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.6 0.6 0.6 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/front_castor_wheel_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}front_castor_wheel_joint" type="continuous">
      <origin xyz="0.021643 0.023336 -0.033" rpy="0 0 0" />
      <parent link="${prefix}front_castor_body_link" />
      <child link="${prefix}front_castor_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>

    <!-- back caster -->
    <link name="${prefix}back_castor_body_link">
      <inertial>
        <origin xyz="-0.0055142 -0.00031498 -0.0066169" rpy="0 0 0" />
        <mass value="0.011291" />
        <inertia ixx="4.0603E-06" ixy="1.3028E-08" ixz="-8.6797E-07" iyy="3.8334E-06" iyz="-4.9618E-08" izz="4.4634E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/back_castor_body_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.4 0.4 0.4 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/back_castor_body_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}back_castor_body_joint" type="continuous">
      <origin xyz="-0.105 0 -0.0415" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}back_castor_body_link" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}back_castor_wheel_link">
      <inertial>
        <origin xyz="0.001265 -0.021964 -2.6984E-06" rpy="0 0 0" />
        <mass value="0.047259" />
        <inertia ixx="9.5208E-06" ixy="-2.6579E-07" ixz="-1.9877E-09" iyy="1.4164E-05" iyz="-1.1341E-10" izz="9.4974E-06" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/back_castor_wheel_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.6 0.6 0.6 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/back_castor_wheel_link.STL" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}back_castor_wheel_joint" type="continuous">
      <origin xyz="-0.024216 0.020654 -0.033" rpy="0 0 0" />
      <parent link="${prefix}back_castor_body_link" />
      <child link="${prefix}back_castor_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>

    <!-- Gazebo ROS 2 control plugin -->
    <gazebo>
      <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>/home/kiran_gunathilaka/development/ros/exam_bot_ws/src/robot_description/config/controllers.yaml</parameters>
        <controller_manager_name>controller_manager</controller_manager_name>
      </plugin>
    </gazebo>

    <!-- ros2_control hardware description -->
    <!-- Provides joint state interfaces for all joints (wheels + casters) -->
    <ros2_control name="GazeboSimSystem" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>
      
      <!-- Left wheel joint - state only (diff-drive plugin controls it) -->
      <joint name="${prefix}left_wheel_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      
      <!-- Right wheel joint - state only (diff-drive plugin controls it) -->
      <joint name="${prefix}right_wheel_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      
      <!-- Front caster body joint - state only (passive) -->
      <joint name="${prefix}front_castor_body_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      
      <!-- Front caster wheel joint - state only (passive) -->
      <joint name="${prefix}front_castor_wheel_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      
      <!-- Back caster body joint - state only (passive) -->
      <joint name="${prefix}back_castor_body_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
      
      <!-- Back caster wheel joint - state only (passive) -->
      <joint name="${prefix}back_castor_wheel_joint">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>
    </ros2_control>

  </xacro:macro>
</robot>
