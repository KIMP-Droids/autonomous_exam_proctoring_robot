<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:macro name="AEP_Robot" params="prefix:=">

    <!-- base_link -->
    <link name="${prefix}base_link">
      <inertial>
        <origin xyz="-0.0023189 0.0073427 0.1843" rpy="0 0 0" />
        <mass value="15.896" />
        <inertia ixx="0.65725" ixy="-3.6456E-08" ixz="0.040641" iyy="0.58335" iyz="-2.2784E-12" izz="0.1582" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/base_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.5 0.5 0.5 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/base_link.STL" />
        </geometry>
      </collision>
    </link>
    
    <!-- Gazebo diff-drive plugin -->
    <gazebo reference="${prefix}base_link">
      <plugin name="gz::plugin::DiffDrive" filename="gz-sim-diff-drive-system">
        <left_joint>${prefix}left_wheel_joint</left_joint>
        <right_joint>${prefix}right_wheel_joint</right_joint>
        <wheel_separation>0.5897</wheel_separation>
        <wheel_radius>0.1</wheel_radius>
        <odom_publish_rate>50</odom_publish_rate>
        <topic>cmd_vel</topic>
        <odom_topic>odom</odom_topic>
        <odom_frame>odom</odom_frame>
        <robot_base_frame>${prefix}base_link</robot_base_frame>
      </plugin>
    </gazebo>

    <!-- lidar -->
    <link name="${prefix}lidar_link">
      <inertial>
        <origin xyz="-9.1926E-05 -0.0067665 -0.0073819" rpy="0 0 0" />
        <mass value="1.3308" />
        <inertia ixx="0.0009607" ixy="8.0198E-07" ixz="-3.0916E-06" iyy="0.00061492" iyz="-0.00015824" izz="0.0010982" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/lidar_link.STL" />
        </geometry>
        <material name="">
          <color rgba="0.2 0.7 1 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://robot_description/meshes/lidar_link.STL" />
        </geometry>
      </collision>
      
      <!-- Gazebo LiDAR sensor plugin -->
      <gazebo reference="${prefix}lidar_link">
        <sensor name="lidar" type="ray">
          <pose>0 0 0 0 0 0</pose>
          <visualize>true</visualize>
          <update_rate>10</update_rate>
          <ray>
            <scan>
              <horizontal>
                <samples>360</samples>
                <resolution>1.0</resolution>
                <min_angle>-3.14159</min_angle>
                <max_angle>3.14159</max_angle>
              </horizontal>
            </scan>
            <range>
              <min>0.12</min>
              <max>12.0</max>
              <resolution>0.01</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </ray>
          <plugin name="gz::sensors::Lidar" filename="gz-sensors-lidar">
            <topic>scan</topic>
            <frame_id>${prefix}lidar_link</frame_id>
          </plugin>
        </sensor>
      </gazebo>
    </link>

    <joint name="${prefix}lidar_joint" type="fixed">
      <origin xyz="0 0.000420393431200835 0.32565" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}lidar_link" />
      <axis xyz="0 0 0" />
    </joint>

    <!-- IMU link -->
    <link name="${prefix}imu_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.01" />
        <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.02 0.02 0.01" />
        </geometry>
        <material name="">
          <color rgba="0 1 0 0.5" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.02 0.02 0.01" />
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}imu_joint" type="fixed">
      <origin xyz="0 0 0.15" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}imu_link" />
    </joint>

    <!-- Gazebo IMU sensor plugin -->
    <!-- NOTE: IMU plugin temporarily commented out due to plugin loading issues -->
    <!-- The imu_link still exists in URDF for future use -->
    <!-- To enable IMU, uncomment below and ensure correct plugin is installed -->
    <!--
    <gazebo reference="${prefix}imu_link">
